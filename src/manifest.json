{
  "manifest_version": 2,
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "assets/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
